<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.mogumogu.presencedetector">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".PresenceDetectorApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.RegistrationActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ScanActivity"
            android:label="@string/label_scan_activity"
            android:parentActivityName=".activity.RegistrationActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.RegistrationActivity" />
        </activity>

        <activity android:name=".BeaconDetailsActivity" />

        <activity android:name=".activity.SubscribedBeaconsActivity"
            android:label="@string/label_my_beacons_activity"
            android:parentActivityName=".activity.RegistrationActivity">

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".activity.RegistrationActivity" />
        </activity>

        <activity android:name=".activity.SettingsActivity"
            android:label="@string/label_setting_activity"
            android:parentActivityName=".activity.RegistrationActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.RegistrationActivity" />
        </activity>
        <activity android:name=".activity.HelpActivity"/>
    </application>

</manifest>